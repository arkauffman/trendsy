<a class='dropdown-button btn' href='#' data-activates='dropdown1'>Filter</a>
<p id="notice"><%= notice %></p>

<div class="row">
    <div class="flex-inner">
        <ul id='dropdown1' class='dropdown-content'>
            <li><%= link_to 'All', home_path(filter: 'All') %></li>
            <li class="divider"></li>
            <li><%= link_to 'Clothing', home_path(filter: 'Clothing') %></li>
            <li class="divider"></li>
            <li><%= link_to 'Jewelry', home_path(filter: 'Jewelry') %></li>
            <li class="divider"></li>
            <li><%= link_to 'Crafts', home_path(filter: 'Crafts') %></li>
            <li class="divider"></li>
            <li><%= link_to 'Entertainment', home_path(filter: 'Entertainment') %></li>
            <li class="divider"></li>
            <li><%= link_to 'Home', home_path(filter: 'Home') %></li>
            <li class="divider"></li>
            <li><%= link_to 'Kids', home_path(filter: 'Kids') %></li>   
        </ul>     
        <% @products.each do |product| %>
            <div class="images">
                <%= link_to image_tag(product.image.url, :class => "img-responsive", :width => "275"), product_path(product) %>
            </div>
        <% end %>
    </div>
</div>

<script>
    $(document).ready(function() {
        $('select').material_select();
    });

    $('.dropdown-button').dropdown({
        inDuration: 300,
        outDuration: 225,
        constrain_width: true, 
        hover: false, 
        gutter: 0, 
        belowOrigin: false 
        }
      );
</script>