<h3> Upload </h3>

<%= form_for @product do |f| %>
    <% if @product.errors.any? %>
        <div class="error_messages">
            <h5>Form is invalid</h5>
            <% for message in @product.errors.full_messages %>
            <div class="messages"><%= message %></div>
            <% end %>
        </div>
    <% end %>


    <div class="row">
        <div class="input-field col s6 offset-s1">
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6 offset-s1">
            <%= f.label :price %>
            <%= f.text_field :price, required: true %>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6 offset-s1">
            <%= f.label :quantity %>
            <%= f.text_field :quantity %>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6 offset-s1">
            <%= f.label :description %>
            <%= f.text_field :description %>
        </div>
    </div>
    <div class="row">
      <div class="input-field s5 col">
        <%= f.file_field :image %><br><br>
      </div>
    </div>

    <div class="upload_submit">
        <%= submit_tag "Upload", :class => "waves-effect waves-light btn" %>
    </div>
<% end %>
